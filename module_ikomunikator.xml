<?xml version="1.0" encoding="UTF-8"?>
<project name="module_ikomunikator" default="compile.module.ikomunikator">
  <dirname property="module.ikomunikator.basedir" file="${ant.file.module_ikomunikator}"/>
  
  <property name="module.jdk.home.ikomunikator" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.ikomunikator" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.ikomunikator" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.ikomunikator" value="-encoding UTF-8 -source 1.5 -target 1.5 ${compiler.args}"/>
  
  <property name="ikomunikator.output.dir" value="${module.ikomunikator.basedir}/target/classes"/>
  <property name="ikomunikator.testoutput.dir" value="${module.ikomunikator.basedir}/target/test-classes"/>
  
  <path id="ikomunikator.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="ikomunikator.module.production.classpath">
    <path refid="${module.jdk.classpath.ikomunikator}"/>
    <path refid="library.maven:_org.apache.commons:commons-configuration2:2.0.classpath"/>
    <path refid="library.maven:_org.apache.commons:commons-lang3:3.3.2.classpath"/>
    <path refid="library.maven:_commons-logging:commons-logging:1.2.classpath"/>
    <path refid="library.maven:_commons-beanutils:commons-beanutils:1.9.2.classpath"/>
    <path refid="library.maven:_commons-collections:commons-collections:3.2.1.classpath"/>
    <path refid="library.maven:_commons-digester:commons-digester:2.1.classpath"/>
  </path>
  
  <path id="ikomunikator.runtime.production.module.classpath">
    <pathelement location="${ikomunikator.output.dir}"/>
    <path refid="library.maven:_org.apache.commons:commons-configuration2:2.0.classpath"/>
    <path refid="library.maven:_org.apache.commons:commons-lang3:3.3.2.classpath"/>
    <path refid="library.maven:_commons-logging:commons-logging:1.2.classpath"/>
    <path refid="library.maven:_commons-beanutils:commons-beanutils:1.9.2.classpath"/>
    <path refid="library.maven:_commons-collections:commons-collections:3.2.1.classpath"/>
    <path refid="library.maven:_commons-digester:commons-digester:2.1.classpath"/>
  </path>
  
  <path id="ikomunikator.module.classpath">
    <path refid="${module.jdk.classpath.ikomunikator}"/>
    <pathelement location="${ikomunikator.output.dir}"/>
    <path refid="library.maven:_org.apache.commons:commons-configuration2:2.0.classpath"/>
    <path refid="library.maven:_org.apache.commons:commons-lang3:3.3.2.classpath"/>
    <path refid="library.maven:_commons-logging:commons-logging:1.2.classpath"/>
    <path refid="library.maven:_commons-beanutils:commons-beanutils:1.9.2.classpath"/>
    <path refid="library.maven:_commons-collections:commons-collections:3.2.1.classpath"/>
    <path refid="library.maven:_commons-digester:commons-digester:2.1.classpath"/>
  </path>
  
  <path id="ikomunikator.runtime.module.classpath">
    <pathelement location="${ikomunikator.testoutput.dir}"/>
    <pathelement location="${ikomunikator.output.dir}"/>
    <path refid="library.maven:_org.apache.commons:commons-configuration2:2.0.classpath"/>
    <path refid="library.maven:_org.apache.commons:commons-lang3:3.3.2.classpath"/>
    <path refid="library.maven:_commons-logging:commons-logging:1.2.classpath"/>
    <path refid="library.maven:_commons-beanutils:commons-beanutils:1.9.2.classpath"/>
    <path refid="library.maven:_commons-collections:commons-collections:3.2.1.classpath"/>
    <path refid="library.maven:_commons-digester:commons-digester:2.1.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.ikomunikator">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.ikomunikator">
    <patternset refid="excluded.from.module.ikomunikator"/>
  </patternset>
  
  <path id="ikomunikator.module.sourcepath">
    <dirset dir="${module.ikomunikator.basedir}">
      <include name="src/main/java"/>
      <include name="src/main/resources"/>
    </dirset>
  </path>
  
  <path id="ikomunikator.module.test.sourcepath">
    <dirset dir="${module.ikomunikator.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.ikomunikator" depends="compile.module.ikomunikator.production,compile.module.ikomunikator.tests" description="Compile module iKomunikator"/>
  
  <target name="compile.module.ikomunikator.production" depends="register.custom.compilers" description="Compile module iKomunikator; production classes">
    <mkdir dir="${ikomunikator.output.dir}"/>
    <javac2 destdir="${ikomunikator.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.ikomunikator}/javac">
      <compilerarg line="${compiler.args.ikomunikator}"/>
      <bootclasspath refid="ikomunikator.module.bootclasspath"/>
      <classpath refid="ikomunikator.module.production.classpath"/>
      <src refid="ikomunikator.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.ikomunikator"/>
    </javac2>
    
    <copy todir="${ikomunikator.output.dir}">
      <fileset dir="${module.ikomunikator.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.ikomunikator.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.ikomunikator.tests" depends="register.custom.compilers,compile.module.ikomunikator.production" description="compile module iKomunikator; test classes" unless="skip.tests">
    <mkdir dir="${ikomunikator.testoutput.dir}"/>
    <javac2 destdir="${ikomunikator.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.ikomunikator}/javac">
      <compilerarg line="${compiler.args.ikomunikator}"/>
      <bootclasspath refid="ikomunikator.module.bootclasspath"/>
      <classpath refid="ikomunikator.module.classpath"/>
      <src refid="ikomunikator.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.ikomunikator"/>
    </javac2>
    
    <copy todir="${ikomunikator.testoutput.dir}">
      <fileset dir="${module.ikomunikator.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.ikomunikator" description="cleanup module">
    <delete dir="${ikomunikator.output.dir}"/>
    <delete dir="${ikomunikator.testoutput.dir}"/>
  </target>
</project>